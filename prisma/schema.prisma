// ARQUIVO: prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// === USUÁRIOS (Fase 1) ===
model User {
  id            String    @id @default(uuid())
  username      String    @unique
  email         String    @unique
  password      String
  roleId        String
  role          Role      @relation(fields: [roleId], references: [id])
  isActive      Boolean   @default(true)
  
  fullName      String
  socialName    String?
  cpf           String?   @unique
  phone         String?
  matricula     String    @unique
  admissionDate DateTime?
  shift         String?
  metadata      Json?

  // Relacionamentos Help Desk
  ticketsOpened Ticket[] @relation("OpenedTickets")
  ticketsSolved Ticket[] @relation("SolvedTickets")

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  @@map("users")
}

model Role {
  id          String       @id @default(uuid())
  name        String       @unique
  description String?
  isSystem    Boolean      @default(false)
  users       User[]
  @@map("roles")
}

model Permission {
  id          String   @id @default(uuid())
  slug        String   @unique
  description String
  @@map("permissions")
}

// === HELP DESK (Fase 2) ===

model Workstation {
  id          String   @id @default(uuid())
  name        String   // Ex: PA-01
  
  // Coordenadas para o Mapa (Arrastar e Soltar)
  posX        Int      @default(0)
  posY        Int      @default(0)
  
  // Status Visual: "OK" (Verde), "ERROR" (Vermelho)
  status      String   @default("OK") 

  tickets     Ticket[]

  @@map("workstations")
}

model Ticket {
  id            String      @id @default(uuid())
  
  title         String      // Ex: Mouse Quebrado
  category      String      // Ex: Hardware, Software, Rede
  description   String?
  status        String      @default("OPEN") // OPEN, CLOSED
  
  // Quem abriu e quem resolveu
  openerId      String
  opener        User        @relation("OpenedTickets", fields: [openerId], references: [id])
  
  solverId      String?
  solver        User?       @relation("SolvedTickets", fields: [solverId], references: [id])
  
  // Onde é o problema
  workstationId String
  workstation   Workstation @relation(fields: [workstationId], references: [id])

  closedAt      DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@map("tickets")
}
// =========================================================
// MÓDULO 3: WFM / DIMENSIONAMENTO
// =========================================================

// 1. Curvas de Distribuição (Ex: Padrão Segunda, Padrão Feriado)
model DistributionCurve {
  id          String   @id @default(uuid())
  name        String   // Ex: "Segunda-feira Voz"
  channel     String   // VOICE_IN, VOICE_OUT, WHATSAPP
  
  // Array de objetos: [{time: "08:00", percent: 0.05}, ...]
  intervals   Json     
  
  simulations Simulation[]

  @@map("distribution_curves")
}

// Adicione no final do schema, junto com o WFM

model ShrinkageProfile {
  id          String   @id @default(uuid())
  name        String   // Ex: "Cenário Padrão"
  
  // JSON para guardar campos dinâmicos: 
  // [{"label": "Faltas", "percent": 5}, {"label": "Férias", "percent": 8.5}]
  items       Json     
  
  simulations Simulation[]

  @@map("shrinkage_profiles")
}

// 2. O Cabeçalho da Simulação
model Simulation {
  id          String   @id @default(uuid())
  description String   // Ex: "Dimensionamento Black Friday"
  channel     String   // VOICE, CHAT...
  dateReference DateTime? // Opcional
  
  // Parâmetros Gerais
  totalVolume Int      // Ex: 10.000 chamadas
  aht         Int      // TMA (segundos)
  slaTarget   Float    // Meta (ex: 80%)
  slaTime     Int      // Tempo Meta (ex: 20s)
  
  // Qual curva usou para distribuir?
  curveId     String
  curve       DistributionCurve @relation(fields: [curveId], references: [id])

  shrinkageId String? // Opcional (se for null, considera 0%)
  shrinkage   ShrinkageProfile? @relation(fields: [shrinkageId], references: [id])

  // Os dados linha a linha (Intra-hora)
  items       SimulationItem[]

  createdAt   DateTime @default(now())
  @@map("simulations")
}

// 3. Os Itens da Simulação (A "Tabela Excel")
model SimulationItem {
  id             String     @id @default(uuid())
  simulationId   String
  simulation     Simulation @relation(fields: [simulationId], references: [id], onDelete: Cascade)
  
  interval       String     // "08:00", "08:30"...
  
  // Dados Calculados (Base)
  volume         Int        // Quantas ligações nesse horário
  requiredAgents Int        // Quantos a Erlang disse que precisa
  
  // Dados Editáveis (Onde você mexe)
  scheduledAgents Int       // Quantos você realmente vai colocar (EDITÁVEL)
  
  // Resultados (Calculados em tempo real)
  projectedSLA   Float      // Qual SLA vai dar com os agentes escalados
  occupancy      Float?     // Ocupação prevista

  @@map("simulation_items")
}
